@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">排序</th>
                    <td class="formValue">
                        <input id="SortCode" name="SortCode" type="text" class="form-control required" placeholder="请输入排序" />
                    </td>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="ParentId" name="ParentId" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="FullName" name="FullName" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                    <th class="formTitle">简称</th>
                    <td class="formValue">
                        <input id="ActionName" name="ActionName" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">类别</th>
                    <td class="formValue">
                        <select id="Type" name="Type" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">连接</th>
                    <td class="formValue">
                        <input id="UrlAddress" name="UrlAddress" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">栏目模板</th>
                    <td class="formValue">
                        <select id="TempletId" name="TempletId" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">内容模板</th>
                    <td class="formValue">
                        <select id="CTempletId" name="CTempletId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">M栏目模板</th>
                    <td class="formValue">
                        <select id="MTempletId" name="MTempletId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">M内容模板</th>
                    <td class="formValue">
                        <select id="MCTempletId" name="MCTempletId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">有效</th>
                    <td class="formValue">
                        <select id="EnabledMark" name="EnabledMark" class="form-control">
                            <option value="true">是</option>
                            <option value="false">否</option>
                        </select>
                    </td>
                    <th class="formTitle">主页</th>
                    <td class="formValue">
                        <select id="MainMark" name="MainMark" class="form-control">
                            <option value="false">否</option>
                            <option value="true">是</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Description" name="Descriptions" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
@section scripts {
    <script>
        var keyValue = $.request("keyValue");
        var sysTempletId = $.request("sysTempletId");
        $(function () {
            initControl();
            if (!!keyValue) {
                $.ajax({
                    url: "/SystemManage/SysColumns/GetFormJson",
                    data: { keyValue: keyValue },
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        $("#form1").formSerialize(data);
                    }
                });
            }
        });
        function initControl() {
            $("#TempletId").bindSelect({
                url: "/SystemManage/SysTempletManage/GetGridJson?parentId=" + sysTempletId,
                id: "Id",
                text: "FullName"
            });
            $("#CTempletId").bindSelect({
                url: "/SystemManage/SysTempletManage/GetGridJson?parentId=" + sysTempletId,
                id: "Id",
                text: "FullName"
            });
            $("#MTempletId").bindSelect({
                url: "/WebManage/Templet/GetGridJson",
                id: "Id",
                text: "FullName"
            });
            $("#MCTempletId").bindSelect({
                url: "/WebManage/Templet/GetGridJson",
                id: "Id",
                text: "FullName"
            });
            $("#Type").bindSelect({
                url: "/SystemManage/SysColumns/GetTypeSelectJson",
                id: "Value",
                text: "Desc"
            });
            $("#ParentId").bindSelect({
                url: "/SystemManage/SysColumns/GetTreeSelectJson?sysTempletId=" + sysTempletId,
            });
            $("#Type").change(function () {
                selType();
            });
        }
        function submitForm() {
            if (!$('#form1').formValid()) {
                return false;
            }
            $.submitForm({
                url: "/SystemManage/SysColumns/SubmitForm?keyValue=" + keyValue + "&sysTempletId=" + sysTempletId,
                param: $("#form1").formSerialize(),
                success: function () {
                    $.currentWindow().$("#gridList").resetSelection();
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            })
        }

        //类别选择事件
        function selType() {
            var typeval = $("#Type").val();
            if (typeval == 2 || typeval == 4) {
                $("#CTempletId").addClass("required");
            } else {
                $("#CTempletId").removeClass("required");
            }
        }
    </script>
}