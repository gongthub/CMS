@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建模块</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改模块</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除模块</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看模块</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
@section scripts {
    <script>
        $(function () {
            gridList();
        })
        function gridList() {
            var $gridList = $("#gridList");
            $gridList.dataGrid({
                treeGrid: true,
                treeGridModel: "adjacency",
                ExpandColumn: "UrlAddress",
                url: "/WebManage/Columns/GetTreeGridJson",
                height: $(window).height() - 96,
                colModel: [
                    { label: "主键", name: "Id", hidden: true, key: true },
                    { label: '名称', name: 'FullName', width: 200, align: 'left' },
                    { label: '连接', name: 'UrlAddress', width: 260, align: 'left' },
                    {
                        label: '目标', name: 'Type', width: 80, align: 'center',
                        formatter: function (cellvalue) {
                            if (cellvalue == "0") {
                                return "导航";
                            } else if (cellvalue == "1") {
                                return "内容";
                            } else if (cellvalue == "2") {
                                return "列表";
                            } else if (cellvalue == "3") {
                                return "连接";
                            } else if (cellvalue == "4") {
                                return "高级列表";
                            }
                        }
                    },
                    {
                        label: "有效", name: "EnabledMark", width: 60, align: "center",
                        formatter: function (cellvalue) {
                            return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                        }
                    },
                    {
                        label: "主页", name: "MainMark", width: 60, align: "center",
                        formatter: function (cellvalue) {
                            return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                        }
                    },
                    { label: '描述', name: 'Description', width: 300, align: 'left' }
                ]
            });
            $("#btn_search").click(function () {
                $gridList.jqGrid('setGridParam', {
                    postData: { keyword: $("#txt_keyword").val() },
                }).trigger('reloadGrid');
            });
        }
        function btn_add() {
            $.modalOpen({
                id: "Form",
                title: "新增模块",
                url: "/WebManage/Columns/Form",
                width: "700px",
                height: "500px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
        function btn_edit() {
            var keyValue = $("#gridList").jqGridRowValue().Id;
            if (keyValue != null && keyValue != undefined) {
                $.modalOpen({
                    id: "Form",
                    title: "修改模块",
                    url: "/WebManage/Columns/Form?keyValue=" + keyValue,
                    width: "700px",
                    height: "500px",
                    callBack: function (iframeId) {
                        top.frames[iframeId].submitForm();
                    }
                });
            }
            else {
                alert("请选择一条数据！");
            }
        }
        function btn_delete() {
            var keyValue = $("#gridList").jqGridRowValue().Id;
            if (keyValue != null && keyValue != undefined) {
                $.deleteForm({
                    url: "/WebManage/Columns/DeleteForm",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").resetSelection();
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
            else {
                alert("请选择一条数据！");
            }
        }
        function btn_details() {
            var keyValue = $("#gridList").jqGridRowValue().Id;
            if (keyValue != null && keyValue != undefined) {
                $.modalOpen({
                    id: "Details",
                    title: "查看模块",
                    url: "/WebManage/Columns/Details?keyValue=" + keyValue,
                    width: "700px",
                    height: "500px",
                    btn: null,
                });
            }
            else {
                alert("请选择一条数据！");
            }
        }
    </script>
}