@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataTreeGrid({
            ExpandColumn: "DirName",
            url: "/WebManage/Resource/GetGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: '文件夹', name: 'DirName', width: 700, align: 'left' },
                {
                    label: '类型', name: 'Type', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        if (cellvalue == "0") {
                            return "文件夹";
                        } else if (cellvalue == "1") {
                            return "文件";
                        }
                    }
                }
            ]
        });
    }

    function btn_add() {
        var selType = $("#gridList").jqGridRowValue().Type;
        var selDirName = $("#gridList").jqGridRowValue().DirName;
        alert(selType);
        alert(selDirName);
        return;
        $.modalOpen({
            id: "Form",
            title: "新增文件夹",
            url: "/WebManage/Resource/Form",
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        $.modalOpen({
            id: "Form",
            title: "修改模块",
            url: "/WebManage/Columns/Form?keyValue=" + keyValue,
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/WebManage/Columns/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().Id },
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_upload() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        $.modalOpen({
            id: "Details",
            title: "查看模块",
            url: "/WebManage/Columns/Details?keyValue=" + keyValue,
            width: "700px",
            height: "490px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建文件夹</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-upload" authorize="yes" onclick="btn_upload()"><i class="fa fa-trash-o"></i>上传资源</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
