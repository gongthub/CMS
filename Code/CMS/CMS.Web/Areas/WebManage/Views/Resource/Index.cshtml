@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/js/zclip/jquery.zclip.min.js"></script>
<script>
    $(function () {
        gridList();
        $("#FilesUp").on("change", function () {
            fileUploads();
        });
    })

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataTreeGrid({
            ExpandColumn: "DirName",
            url: "/WebManage/Resource/GetGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: '主键', name: 'id', width: 20, align: 'left', hidden: true, key: true },
                { label: '文件夹', name: 'DirName', width: 700, align: 'left' },
                {
                    label: '类型', name: 'Type', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        if (cellvalue == "0") {
                            return "文件夹";
                        } else if (cellvalue == "1") {
                            return "文件";
                        }
                    }
                }
            ]
        });
    }

    function btn_add() {
        var selType = $("#gridList").jqGridRowValue().Type;
        var key = $("#gridList").jqGridRowValue().id;

        if (selType != "文件夹") {
            alert("只能选择文件夹新建文件夹！");
            return;
        } else {
            $.modalOpen({
                id: "Form",
                title: "新增文件夹",
                url: "/WebManage/Resource/Form?keyValue=" + key,
                width: "700px",
                height: "440px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
    }

    function btn_delete() {
        $.deleteForm({
            url: "/WebManage/Resource/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().id },
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function btn_upload() {

        var selType = $("#gridList").jqGridRowValue().Type;
        var key = $("#gridList").jqGridRowValue().id;

        if (selType != "文件夹") {
            alert("只能选择文件夹上传资源！");
            return;
        } else {
            $("#FilesUp").click();
        }
    }

    function fileUploads() {
        var key = $("#gridList").jqGridRowValue().id;
        uploadResourceFiles("FilesUp", key);
        $.currentWindow().$("#gridList").resetSelection();
        $.currentWindow().$("#gridList").trigger("reloadGrid");
    }

    function btn_copy() {

        var selType = $("#gridList").jqGridRowValue().Type;
        var dirName = $("#gridList").jqGridRowValue().DirName;

        if (selType != "文件") {
            alert("只能选择文件进行复制链接！");
            return;
        } else {
            copyToClipboard(dirName);
        }
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-add" authorize="yes" onclick="btn_add()"><i class="fa fa-trash-o"></i>新建文件夹</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除资源</a></li>
                <li><a id="NF-upload" authorize="yes" onclick="btn_upload()"><i class="fa fa-trash-o"></i>上传资源</a></li>
                <li><a id="NF-copy" authorize="yes" onclick="btn_copy()"><i class="fa fa-trash-o"></i>复制链接</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>

