@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/js/Common.js"></script>
<script src="~/Content/js/uploadPreview.js"></script>
<script>

    var keyValue = $.request("keyValue"); 
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/WebManage/WebSiteMgr/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#ImgPr").attr("src", data.Icon);
                    $("#form1").formSerialize(data);
                }
            });
        }

        $("#Icon").uploadPreview({ Img: "ImgPr", Width: 120, Height: 120 });
    })

    function submitForm() {

        if (!$('#form1').formValid()) {
            return false;
        }

        var filePaths = uploadImg();
        var postData = $("#form1").formSerialize(); 
        postData["Icon"] = filePaths;
        $.submitForm({
            url: "/WebManage/WebSiteMgr/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }

    //上传图片
    function uploadImg() {
        var filePath = "";
        var formData = new FormData();
        formData.append("fileicon", $("#Icon")[0].files[0]);
        $.ajax({
            type: "POST",
            url: "/WebManage/Content/UploadImg",
            dataType: "json",
            data: formData,
            async: false,
            // 告诉jQuery不要去处理发送的数据
            processData: false,
            // 告诉jQuery不要去设置Content-Type请求头
            contentType: false,
            success: function (data) {
                var jsonData = eval(data);
                if (jsonData.message == "true") {
                    if (jsonData.data != null && jsonData.data != undefined) {
                        filePath = jsonData.data;
                    }
                } else {
                    alert(jsonData.data);
                    return;
                }
            }
        });
        return filePath;
    }

</script>
<form id="form1" enctype="multipart/form-data">
    <div class="widget-body">
        <div id="wizard" class="wizard" data-target="#wizard-steps" style="border-left: none; border-top: none; border-right: none;">
            <ul class="steps">
                <li data-target="#step-1" class="active"><span class="step">1</span>网站信息<span class="chevron"></span></li>
            </ul>
        </div>
        <div class="step-content" id="wizard-steps" style="border-left: none; border-bottom: none; border-right: none;">
            <div class="step-pane active" id="step-1" style="margin: 10px; margin-bottom: 0px;">
                <div class="panel panel-default">
                    <div class="panel-body" style="width: 98%;">
                        <table class="form">
                            <tr>
                                <th class="formTitle">排序</th>
                                <td class="formValue">
                                    <input id="SortCode" name="SortCode" type="text" class="form-control required" placeholder="请输入排序" />
                                </td>
                                <th class="formTitle">简称</th>
                                <td class="formValue">
                                    <input id="ShortName" name="ShortName" type="text" class="form-control required" placeholder="请输入简称" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">名称</th>
                                <td class="formValue">
                                    <input id="FullName" name="FullName" type="text" class="form-control required" placeholder="请输入名称" />
                                </td>
                                <th class="formTitle">所有人</th>
                                <td class="formValue">
                                    <input id="UserName" name="UserName" type="text" class="form-control required" placeholder="请输入所有人" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">域名</th>
                                <td class="formValue">
                                    <input id="UrlAddress" name="UrlAddress" type="text" class="form-control required" placeholder="请输入地址" />
                                </td>
                                <th class="formTitle">端口</th>
                                <td class="formValue">
                                    <input id="Point" name="Point" type="text" class="form-control required" placeholder="请输入端口" value="80" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">手机号</th>
                                <td class="formValue">
                                    <input id="Phone" name="Phone" type="text" class="form-control required" placeholder="请输入手机号" />
                                </td>
                                <th class="formTitle">邮箱</th>
                                <td class="formValue">
                                    <input id="Email" name="Email" type="text" class="form-control required" placeholder="请输入邮箱" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">备案</th>
                                <td class="formValue" colspan="3">
                                    <input id="Record" name="Record" type="text" class="form-control required" placeholder="请输入备案" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">图标</th>
                                <td class="formValue">
                                    <div>
                                        <div class="sys-div-imgupload">
                                            <div class="sys-div-upload">
                                                <input id="Icon" name="Icon" type="file" />请选择图片
                                            </div>
                                            <img id="ImgPr" width="30" height="30" />
                                        </div>
                                    </div>
                                </td>
                                <th class="formTitle" style="height: 35px;">是否有效</th>
                                <td class="formValue" style="padding-top: 1px;">
                                    <div class="ckbox">
                                        <input id="EnabledMark" name="EnabledMark" type="checkbox" checked="checked"><label for="EnabledMark">有效</label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle" valign="top" style="padding-top: 5px;">
                                    备注
                                </th>
                                <td class="formValue" colspan="3">
                                    <textarea id="Description" name="Description" class="form-control" style="height: 80px;"></textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-button" id="wizard-actions">
            <a id="btn_finish" class="btn btn-default" onclick="submitForm()">完成</a>
        </div>
    </div>
</form>
