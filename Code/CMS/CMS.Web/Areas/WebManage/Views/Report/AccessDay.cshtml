@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>日访问量</title>
    <script src="~/Content/js/echarts/echarts.min.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 100%;height:400px;"></div>
</body>
</html>
@section scripts {
    <script type="text/javascript">

        $(function () {
            var htemp = $(window).height() - 128;
            $("#main").height(htemp);
            GetDataByDates();
        });
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));

        option = {
            title: {
                text: '日访问量'
            },
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['总访问', '新客户', '老客户']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: []
            },
            yAxis: {
                type: 'value'
            },
            series: [
                {
                    name: '总访问',
                    type: 'line',
                    stack: '总量',
                    data: []
                },
                {
                    name: '新客户',
                    type: 'line',
                    stack: '总量',
                    data: []
                },
                {
                    name: '老客户',
                    type: 'line',
                    stack: '总量',
                    data: []
                }
            ]
        };

        function GetDataByDates() { 
            $.getPostAndData({
                url: "/WebManage/Report/GetAccessDayDates",
                param: {},
                success: function (data) {
                    var da = eval(data);
                    option.xAxis.data = da.xAxisdata;
                    option.series[0].data = da.allDatas;
                    option.series[1].data = da.newDatas;
                    option.series[2].data = da.oldDatas;
                    //使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            }) 
        }
    </script>
}