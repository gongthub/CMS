@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/js/Common.js"></script>
<link href="~/Content/js/simditor/css/simditor.css" rel="stylesheet" />
<script src="~/Content/js/simditor/js/module.min.js"></script>
<script src="~/Content/js/simditor/js/hotkeys.min.js"></script>
<script src="~/Content/js/simditor/js/simditor.min.js"></script>
<script src="~/Content/js/uploadPreview.js"></script>
<style>
    .simditor {
        border-left: none;
        border-right: none;
        border-top: none;
    }

    .Content_Form_divContents {
        position: fixed;
        width: 100%;
        height: 100%;
        overflow: auto;
    }
</style>
<script>

    var keyValue = $.request("keyValue");
    var moduleId = $.request("moduleId");
    var editor;
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/WebManage/C_Content/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    data.F_Content = htmlDecode(data.F_Content);
                    editor.setValue(data.F_Content) 
                    $("#ImgPr").attr("src", data.F_Icon);
                    $("#form1").formSerialize(data);
                }
            });
        }

        $("#F_Icon").uploadPreview({ Img: "ImgPr", Width: 120, Height: 120 });
    })
    function initControl() {
        $('#wizard').wizard().on('change', function (e, data) {
            var $finish = $("#btn_finish");
            var $next = $("#btn_next");
            if (data.direction == "next") {
                switch (data.step) {
                    case 2:
                        if (!$('#form1').formValid()) {
                            return false;
                        }
                        $finish.show();
                        $next.hide();
                        break;
                    default:
                        break;
                }
            } else {
                $finish.hide();
                $next.show();
            }
        });
        //toolbar = ['title', 'bold', 'italic', 'underline', 'strikethrough',
        //  'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', '|',
        //  'link', 'image', 'hr', '|', 'indent', 'outdent'];
        //editor = new Simditor({
        //    textarea: $('#F_Content'),
        //    placeholder: '这里输入内容...',
        //    toolbar: toolbar,  //工具栏
        //    defaultImage: 'simditor-2.0.1/images/image.png', //编辑器插入图片时使用的默认图片
        //    upload: {
        //        url: 'ImgUpload.action', //文件上传的接口地址
        //        params: null, //键值对,指定文件上传接口的额外参数,上传的时候随文件一起提交
        //        fileKey: 'fileDataFileName', //服务器端获取文件数据的参数名
        //        connectionCount: 3,
        //        leaveConfirm: '正在上传文件'
        //    }
        //});
        editor = new Simditor({
            textarea: $('#F_Content'),
            toolbar: ['title', 'bold', 'italic', 'underline', 'strikethrough', 'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', '|', 'link', 'image', 'hr', '|', 'indent', 'outdent']
        });
    }
    function submitForm() {

        if (!$('#form1').formValid()) {
            return false;
        }
         
        var filePaths = uploadImg(); 
        var postData = $("#form1").formSerialize();
        //var postData = $("#form1").serialize();
        postData["F_Content"] = htmlEncode(postData["F_Content"]);
        postData["F_ModuleId"] = moduleId;
        postData["F_Icon"] = filePaths;
        $.submitForm({
            url: "/WebManage/C_Content/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
    //上传图片
    function uploadImg() {
        var filePath = "";
        var formData = new FormData();
        formData.append("fileicon", $("#F_Icon")[0].files[0]);
        $.ajax({
            type: "POST",
            url: "/WebManage/C_Content/UploadImg",
            dataType: "json",
            data: formData,
            async:false,
            // 告诉jQuery不要去处理发送的数据
            processData: false,
            // 告诉jQuery不要去设置Content-Type请求头
            contentType: false,
            success: function (data) {
                var jsonData = eval(data);
                if (jsonData.message == "true") { 
                    if (jsonData.data != null && jsonData.data != undefined) {
                        filePath = jsonData.data; 
                    } 
                } else {
                    alert(jsonData.data);
                    return;
                }
            }
        });
        return filePath;
    }
</script>
<form id="form1" enctype="multipart/form-data">
    <div class="widget-body">
        <div id="wizard" class="wizard" data-target="#wizard-steps" style="border-left: none; border-top: none; border-right: none;">
            <ul class="steps">
                <li data-target="#step-1" class="active"><span class="step">1</span>基础信息<span class="chevron"></span></li>
                <li data-target="#step-2"><span class="step">2</span>SEO信息<span class="chevron"></span></li>
                <li data-target="#step-3"><span class="step">3</span>内容<span class="chevron"></span></li>
            </ul>
        </div>
        <div class="step-content" id="wizard-steps" style="border-left: none; border-bottom: none; border-right: none;">
            <div class="step-pane active" id="step-1" style="margin: 10px; margin-bottom: 0px;">
                <div class="panel panel-default">
                    <div class="panel-body" style="width: 98%;">
                        <table class="form">
                            <tr>
                                <th class="formTitle">排序</th>
                                <td class="formValue">
                                    <input id="F_SortCode" name="F_SortCode" type="text" class="form-control" placeholder="请输入排序" />
                                </td>
                                <th class="formTitle">名称</th>
                                <td class="formValue">
                                    <input id="F_FullName" name="F_FullName" type="text" class="form-control" placeholder="请输入名称" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">作者</th>
                                <td class="formValue">
                                    <input id="F_Author" name="F_Author" type="text" class="form-control" placeholder="请输入作者" />
                                </td>
                                <th class="formTitle">时间</th>
                                <td class="formValue">
                                    <input id="F_EditTime" name="F_EditTime" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker({dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">图标</th>
                                <td class="formValue">
                                    @*<input id="F_Icon" name="F_Icon" type="text" class="form-control" placeholder="请输入图标" />*@
                                    <div>
                                        @*<form action="/WebManage/C_Content/UploadImg" id="form_uploadimg">*@
                                        <div class="sys-div-imgupload">
                                            <div class="sys-div-upload">
                                                <input id="F_Icon" name="F_Icon" type="file" />请选择图片
                                            </div>
                                            <img id="ImgPr" width="30" height="30" />
                                        </div>
                                        @*</form>*@
                                    </div>
                                </td>
                                <th class="formTitle" style="height: 35px;">是否有效</th>
                                <td class="formValue" style="padding-top: 1px;">
                                    <div class="ckbox">
                                        <input id="F_EnabledMark" name="F_EnabledMark" type="checkbox" checked="checked"><label for="F_EnabledMark">有效</label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle" valign="top" style="padding-top: 5px;">
                                    备注
                                </th>
                                <td class="formValue" colspan="3">
                                    <textarea id="F_Description" name="F_Description" class="form-control" style="height: 80px;"></textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="step-pane" id="step-2" style="margin: 10px; margin-bottom: 0px;">
                <div class="panel panel-default">
                    <div class="panel-body" style="width: 98%;">
                        <table class="form">
                            <tr>
                                <th class="formTitle">SEO标题</th>
                                <td class="formValue" colspan="3">
                                    <textarea id="F_SEOTitle" name="F_SEOTitle" class="form-control" style="height: 80px;"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle">SEO关键字</th>
                                <td class="formValue" colspan="3">
                                    <textarea id="F_SEOKeyWords" name="F_SEOKeyWords" class="form-control" style="height: 80px;"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <th class="formTitle" valign="top" style="padding-top: 5px;">
                                    SEO备注
                                </th>
                                <td class="formValue" colspan="3">
                                    <textarea id="F_SEODesc" name="F_SEODesc" class="form-control" style="height: 80px;"></textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="step-pane" id="step-3">
                <div class="Content_Form_divContents">
                    <textarea id="F_Content" name="F_Content"></textarea>
                </div>
            </div>
        </div>
        <div class="form-button" id="wizard-actions">
            <a id="btn_last" disabled class="btn btn-default btn-prev">上一步</a>
            <a id="btn_next" class="btn btn-default btn-next">下一步</a>
            <a id="btn_finish" class="btn btn-default" style="display: none;" onclick="submitForm()">完成</a>
        </div>
    </div>
</form>
